    <!-- Button Styles -->
    <style name="buttonNormal" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="buttonHeading" parent="buttonNormal">
        <item name="android:textSize">@dimen/heading</item>
    </style>

    <style name="buttonMenu" parent="buttonNormal">
        <item name="android:textSize">@dimen/menu</item>
    </style>

    <style name="buttonBarButtonNormal" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
